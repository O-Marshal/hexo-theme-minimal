<% if (page.prev_link || page.next_link) { %>
  <div class="pagination">
    <% if (page.prev_link) { %>
    	<a href="<%=url_for(page.prev_link)%>" class="btn btn-direction btn-default-filled"><i class="fa fa-long-arrow-left"></i><span>上一页</span></a>
    <% } else if (page.prev && page.prev.path) { %>
    	<a href="<%=url_for(page.prev.path)%>" class="btn btn-direction btn-default-filled"><i class="fa fa-long-arrow-left"></i><span>上一页</span></a>
    <% } else { %>
      <a style="display: inline-block; height: 42px; width: 1px"></a>
    <% } %>

    <% if (page.next_link) { %>
    	<a href="<%=url_for(page.next_link)%>" class="btn btn-direction btn-default-filled pull-right"><span>下一页</span><i class="fa fa-long-arrow-right"></i></a>
    <% } else if (page.next && page.next.path) { %>
    	<a href="<%=url_for(page.next.path)%>" class="btn btn-direction btn-default-filled pull-right"><span>下一页</span><i class="fa fa-long-arrow-right"></i></a>
    <% } %>
  </div>
<% } %>